<h1>Sign Up For A New Account</h1>

<div class="row">
  <div class="col-xs-12">
    <form method="POST" action="/auth/signup">
      <div class="form-group">
        <input name="company-name" type="text" class="form-control" placeholder="Name of the project">Company Name:</input>
        <input name="first-name" type="text" class="form-control" placeholder="Name of the project">First Name:</input>
        <input name="last-name" type="text" class="form-control" placeholder="Name of the project">Last Name:</input>

        <input type="password" name="password" placeholder="Password">

      </div>
      <button type="submit" class="btn btn-default">Signup</button>
    </form>
  </div>
</div>
